		<!-- Compass -->
		<function name="AddCompassMark" funcname="fc_addCompassMark">
			<param name="MarkID" desc="ID of the mark" type="int"/>
			<param name="MarkType" desc="Type enum of the mark" type="int"/>
			<param name="QuestColor" desc="Id of tracking color" type="int"/>
      <param name="ObjectiveNumber" desc="id of objective" type="int"/>
			<param name="Distance" desc="Distance to player in meters" type="float"/>
			<param name="Angle" desc="Angle of the mark" type="float"/>
      <param name="NearThreshold" desc="Distance of maximum alpha" type="float"/>
      <param name="FarThreshold" desc="Distance of minimum alpha" type="float"/>
		</function>

		<function name="RemoveCompassMark" funcname="fc_removeCompassMark">
			<param name="MarkID" desc="ID of the mark" type="int"/>
		</function>

		<function name="ResetCompassMarks" funcname="fc_resetCompassMarks" />

		<function name="UpdateCompassMarks" funcname="fc_updateCompassMarks">
			<param name="Angle" desc="Angle of the mark" type="float"/>
		</function>

		<function name="ChangeCompassMark" funcname="fc_changeCompassMark">
			<param name="MarkID" desc="ID of the mark" type="int"/>
			<param name="State" desc="State of the mark" type="int"/>
			<param name="Distance" desc="Distance to player in meters" type="float"/>
			<param name="Angle" desc="Angle of the mark" type="float"/>
      <param name="IsInside" desc="player is inside area" type="bool"/>
		</function>

		<!-- Interactive dialogue -->
    <function name="OnTopicsChanged" funcname="fc_topicsChanged" dynamic="1">
			<param name="IsCleared" desc="True when topic list is empty." type="bool" />
			<param name="IsOnRight" desc="True when topic list should be displayed on right." type="bool" />
		</function>

      <function name="SetDialogNumber" funcname="fc_setDialogNumber" dynamic="1">
        <param name="Value" desc="Number which show on label" type="float" />
        <param name="Money" desc="Money which you have" type="float" />
        <param name="DirectionToPlayer" desc="false money to npc, true money to player" type="bool" />
      </function>

      <function name="CloseDialogNumber" funcname="fc_closeDialogNumber" dynamic="1"/>

		<function name="OnTopicInput" funcname="fc_topicInput" dynamic="0">
			<param name="Min" desc="Min input value." type="int" />
			<param name="Max" desc="Max input value." type="int" />
			<param name="NpcValue" desc="Current npc value." type="int" />
      <param name="PlayerValue" desc="Current player input value." type="int" />
      <param name="PreviousNpcValue" desc="Previous npc value." type="int" />
      <param name="OriginalValue" desc="Previous player input value." type="int" />
      <param name="Anger" desc="How much is npc angry from 0 (happy) to 1 (angry)." type="float" />
      <param name="PreviousAnger" desc="Prewious how much is npc angry from 0 (happy) to 1 (angry)." type="float" />
      <param name="Money" desc="Prewious how much is npc angry from 0 (happy) to 1 (angry)." type="float" />
			<param name="IsOnRight" desc="True when topic list should be displayed on right." type="bool" />
