		</function>

		<function name="SetTutorialButtons" funcname="fc_setTutorialButtons">
			<param name="Controls" desc="Array of split actual controllers which was needed in tutorial" type="string" />
		</function>

		<function name="HideMessage" funcname="fc_hideMessage" />

		<!-- Buff -->
		<function name="OnBuffAdded" funcname="fc_addBuff">
			<param name="BuffId" desc="unique name of buff" type="string" />
			<param name="IconId" desc="number of key frame with buff" type="int"/>
      <param name="UIName" desc="name of buff" type="string"/>
      <param name="Type" desc="buff/debuff/bleeding" type="int"/>
      <param name="Order" desc="ess then zero is left, greater is right" type="int"/>
      <param name="perkUIName" desc="name of perk" type="string"/>
      <param name="perkIconId" desc="id of perk" type="string"/>
      <param name="Visibility" desc="buff show only in inventory" type="int"/>
		</function>

		<function name="OnBuffUpdated" funcname="fc_updateBuff">
			<param name="BuffId" desc="unique name of buff" type="string" />
			<param name="Progress" desc="from 0 to 1" type="float"/>
      <param name="SecondProgress" desc="two state" type="int"/>
		</function>

		<function name="OnBuffRemoved" funcname="fc_removeBuff">
			<param name="BuffId" desc="unique name of buff" type="string" />
		</function>

    <function name="OnSwapBuffId" funcname="fc_swapBuffId">
			<param name="OldBuffId" desc="previous unique name of buff" type="string" />
      <param name="NewBuffId" desc="new unique name of buff" type="string" />
		</function>

      <!-- Level up -->
      <function name="OnShowLevelUp" funcname="fc_showLevelUp">
        <param name="Stat" desc="unique name of stat" type="string" />
        <param name="StatName" desc="string key" type="string" />
        <param name="OnlyXP" desc="not level up only get xp from script" type="bool" />
        <param name="NewPerkpoint" desc="count new perk points" type="int" />
