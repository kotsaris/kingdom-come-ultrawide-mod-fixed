      <!-- Reputation notification -->
      <function name="OnShowReputationNotification" funcname="fc_showReputationNotification">
        <param name="EventId" desc="id of event" type="int" />
        <param name="Message" desc="string key" type="string" />
      </function>

      <!-- Discovered message -->
      <function name="SetDiscoveredMessage" funcname="fc_setDiscoveredMessage">
        <param name="Type" desc="enum define type Location/POI/etc." type="int" />
        <param name="Name" desc="name of Location/POI/etc." type="string" />
        <param name="IconId" desc="id of icon if exist" type="int" />
