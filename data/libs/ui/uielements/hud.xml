			<param name="Index" desc="Active topic index (zero based)" type="int" />
      <param name="Stopper" desc="Call animation that you can not continue" type="int" />
		</function>

    <function name="SetDialogStats" funcname="fc_setDialogStats">
      <param name="IsOnRight" desc="True when topic list should be displayed on right." type="bool" />
      <param name="NameNPC" desc="ui name of opponent in dialogue" type="string" />
      <param name="NamePlayer" desc="ui name of player" type="string" />
      <param name="Reputation" desc="number from -1 to 1 reputation which I have from NPC" type="float" />
      <param name="SpeechPlayerBase" desc="my based stat" type="float" />
      <param name="CharismaPlayerBase" desc="my based stat" type="float" />
      <param name="BadassnessPlayerBase" desc="my based stat" type="float" />
      <param name="SpeechPlayer" desc="my buffed stat" type="float" />
      <param name="CharismaPlayer" desc="my buffed stat" type="float" />
      <param name="BadassnessPlayer" desc="my buffed stat" type="float" />
      <param name="SpeechNPC" desc="NPC based stat, less than 0 mean is uknown" type="float" />
      <param name="CharismaNPC" desc="NPC based stat, less than 0 mean is uknown" type="float" />
      <param name="BadassnessNPC" desc="NPC based stat, less than 0 mean is uknown" type="float" />
    </function>

    <function name="OnTimeLimitChanged" funcname="fc_timeLimitChanged">
			<param name="limit" desc="from 1 to 0 count down" type="float" />
		</function>

